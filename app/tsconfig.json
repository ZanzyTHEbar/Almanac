{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ESNext",
        "module": "ESNext",
        "useDefineForClassFields": true,
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "allowJs": true,
        
        /* Bundler Mode */
        "jsx": "preserve",
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "jsxImportSource": "solid-js",
        "types": ["vite/client"],
        "isolatedModules": true,
        "noEmit": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "paths": {
            "@interfaces/*": ["src/interfaces/*"],
            "@components/*": ["src/components/*"],
            "@routes/*": ["src/routes/*"],
            "@pages/*": ["src/pages/*"],
            "@styles/*": ["src/styles/*"],
            "@config/*": ["src/config/*"],
            "@src/*": ["src/*"],
            "@assets/*": ["./assets/*"],
            "@hooks/*": ["src/utils/hooks/*"],
            "@store/*": ["src/store/*"],
            "@context/*": ["src/context/*"],
            "@static/*": ["src/static/*"],
            "@utils/*": ["src/utils/*"],
            "@src": ["./src/*"]
        },
        /* Linting */
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
    },
    "include": [
        "src",
        "types",
        "tailwind.config.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "extras/CustomCalendar"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ],
    "exclude": ["node_modules", "dist", "build", "docs"]
}
