{
    "name": "almanac",
    "version": "0.1.0",
    "private": true,
    "description": "An open-source, cross-platform, and easy-to-use gardening calendar app built with SolidJS and Tauri.",
    "author": "DaOfficialWizard",
    "license": "MIT",
    "scripts": {
        "dev": "vite dev",
        "build": "tsc && vite build",
        "start": "vite start",
        "serve": "vite preview",
        "tauri": "tauri",
        "tauri:dev": "tauri dev",
        "tauri:dev:release": "tauri dev --release",
        "tauri:build": "tauri build",
        "tauri:build:dev": "tauri build --debug",
        "tauri:update": "cd src-tauri && cargo update && cargo upgrade",
        "tauri:clean": "cd src-tauri && cargo clean",
        "specta:post-install": "pnpm run specta:codegen && pnpm run specta:build",
        "specta:build": "pnpm --stream -r specta:build",
        "specta:gen": "pnpm --stream -r specta:gen",
        "docs": "jsdoc -c jsdoc.conf.json",
        "lint": "eslint --ext .js,.ts,.jsx,.tsx src",
        "format": "pnpm run lint --fix & pnpm prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
        "update-deps": "pnpm up -Li",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@babel/core": "^7.23.6",
        "@babel/preset-env": "^7.23.6",
        "@tailwindcss/forms": "^0.5.7",
        "@tauri-apps/api": "^1.5.3",
        "@tauri-apps/cli": "^1.5.9",
        "@types/node": "^20.10.5",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "autoprefixer": "^10.4.16",
        "babel-loader": "^9.1.3",
        "better-docs": "^2.7.3",
        "eslint": "^8.56.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-autofix": "^1.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-solid": "^0.13.0",
        "https-localhost": "^4.7.1",
        "jsdoc": "^4.0.2",
        "postcss": "^8.4.32",
        "postcss-import": "^15.1.0",
        "prettier": "^3.1.1",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.10",
        "vite-plugin-solid": "^2.8.0"
    },
    "dependencies": {
        "@fullcalendar/bootstrap5": "^6.1.10",
        "@fullcalendar/core": "^6.1.10",
        "@fullcalendar/daygrid": "^6.1.10",
        "@fullcalendar/interaction": "^6.1.10",
        "@fullcalendar/list": "^6.1.10",
        "@fullcalendar/moment": "^6.1.10",
        "@fullcalendar/timegrid": "^6.1.10",
        "@fullcalendar/web-component": "^6.1.10",
        "@kobalte/core": "^0.11.2",
        "@kobalte/tailwindcss": "^0.9.0",
        "@solid-primitives/i18n": "^2.0.0",
        "@solid-primitives/map": "^0.4.8",
        "@solid-primitives/memo": "^1.3.5",
        "@solid-primitives/reducer": "^0.0.101",
        "@solidjs/meta": "^0.29.3",
        "@solidjs/router": "^0.10.5",
        "@tailwindcss/typography": "^0.5.10",
        "babel-preset-solid": "^1.8.6",
        "bootstrap": "^5.3.2",
        "bootstrap-icons": "^1.11.2",
        "moment": "^2.30.1",
        "solid-form-handler": "^1.2.1",
        "solid-i18n": "^1.1.0",
        "solid-icons": "^1.1.0",
        "solid-js": "^1.8 ",
        "solid-spinner": "^0.2.0",
        "solid-transition-group": "^0.2.3",
        "solidjs-icons": "^1.0.12",
        "solidjs-use": "^2.3.0",
        "tauri-plugin-log-api": "github:tauri-apps/tauri-plugin-log",
        "tauri-plugin-splashscreen": "workspace:*",
        "tauri-plugin-store-api": "github:tauri-apps/tauri-plugin-store",
        "tauri-plugin-upload-api": "github:tauri-apps/tauri-plugin-upload",
        "terracotta": "^1.0.3",
        "yup": "^1.3.3"
    }
}