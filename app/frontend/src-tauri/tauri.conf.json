{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Outlook Knight",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "window": {
        "all": true,
        "create": true,
        "center": true,
        "requestUserAttention": true,
        "setResizable": true,
        "setTitle": true,
        "maximize": true,
        "unmaximize": true,
        "minimize": true,
        "unminimize": true,
        "show": true,
        "hide": true,
        "close": true,
        "setDecorations": true,
        "setAlwaysOnTop": true,
        "setSize": true,
        "setMinSize": true,
        "setMaxSize": true,
        "setPosition": true,
        "setFullscreen": true,
        "setFocus": true,
        "setIcon": true,
        "setSkipTaskbar": true,
        "setCursorGrab": true,
        "setCursorVisible": true,
        "setCursorIcon": true,
        "setCursorPosition": true,
        "startDragging": true,
        "print": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "DaOfficialWizard",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.outlookknight.dev",
      "longDescription": "",
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "allowDowngrades": false,
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        },
        "wix": {
          "language": [
            "lv-LV",
            "it-IT",
            "th-TH",
            "uk-UA",
            "hr-HR",
            "ar-SA",
            "pt-PT",
            "fr-FR",
            "ca-ES",
            "zh-CN",
            "cs-CZ",
            "el-GR",
            "nl-NL",
            "sl-SI",
            "jp-JP",
            "sr-Latn-CS",
            "et-EE",
            "hu-HU",
            "ro-RO",
            "tr-TR",
            "sk-SK",
            "de-DE",
            "zh-TW",
            "pt-BR",
            "eu-ES",
            "sv-SE",
            "es-ES",
            "ru-RU",
            "vi-VN",
            "fi-FI",
            "lt-LT",
            "bg-BG",
            "he-IL",
            "pl-PL",
            "ko-KR",
            "nb-NO",
            "da-DK",
            "en-US"
          ]
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "width": 800,
        "resizable": true,
        "center": true,
        "title": "Outlook Knight",
        "visible": false,
        "decorations": false,
        "transparent": true
      },
      {
        "height": 600,
        "width": 800,
        "decorations": false,
        "resizable": false,
        "center": true,
        "url": "splashscreen.html",
        "label": "splashscreen"
      }
    ],
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  }
}